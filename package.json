{
	"name": "coffeekraken-s-activate-component",
	"version": "0.0.1",
	"description": "Simple <a> webcomponent extension that give the ability to activate a target element by adding/removing a class on it. Useful to create some toggle, tabs, etc... behaviors.",
	"main": "dist/index.js",
  "homepage": "http://coffeekraken.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/coffeekraken/s-activate-component"
  },
	"scripts": {
		"dist": "npm run dist.js",
		"dist.js": "babel src -d dist",
		"dist.watch": "concurrently --kill-others \"npm run dist.watch.js\"",
		"dist.watch.js": "nodemon -w src -e js -x \"npm run dist.js\"",
		"demo": "npm run demo.css && npm run demo.js && open ./demo/index.html",
		"demo.css": "node-sass demo/src/sass/style.scss demo/dist/css/style.css",
		"demo.js": "npm run dist.js && webpack",
		"demo.watch": "concurrently --kill-others \"npm run demo.watch.css\" \"npm run demo.watch.js\"",
		"demo.watch.css": "nodemon -w demo/src -w src -e scss -x \"npm run demo.css\"",
		"demo.watch.js": "nodemon -w demo/src -w src -e js -x \"npm run demo.js\"",
    "demo": "coffeekraken-code-playground",
    "doc": "rm -rf doc/src && npm run doc.scss && npm run doc.js",
    "doc.scss": "coffeekraken-docblock-to-markdown -f 'src/**/*.scss' -d doc",
    "doc.js": "coffeekraken-docblock-to-markdown -f 'src/**/*.js' -d doc",
		"test": "node_modules/coffeekraken-testing-stack/run"
	},
	"keywords": [
    "activate",
    "toggle",
		"webcomponent",
		"component",
		"html",
		"sugar",
		"read",
		"more",
		"coffee",
		"kraken",
		"coffeekraken"
	],
	"author": "Coffeekraken <hello@coffeekraken.io>",
  "contributors": [{
    "name": "Olivier Bossel",
    "email": "olivier.bossel@gmail.com",
    "url": "http://olivierbossel.com"
  }],
	"license": "MIT",
	"dependencies": {
		"coffeekraken-sugar": "https://github.com/Coffeekraken/sugar.git#release/0.0.1"
	},
	"devDependencies": {
		"babel-cli": "^6.18.0",
		"babel-core": "^6.20.0",
		"babel-loader": "^6.2.9",
		"babel-plugin-transform-remove-strict-mode": "0.0.2",
		"babel-polyfill": "^6.20.0",
		"babel-preset-es2015": "^6.18.0",
		"babel-preset-stage-0": "^6.16.0",
		"chai": "^3.5.0",
    "coffeekraken-docblock-to-markdown": "https://github.com/Coffeekraken/docblock-to-markdown.git#release/0.0.1",
		"coffeekraken-testing-stack": "https://github.com/Coffeekraken/testing-stack.git#release/0.0.1",
    "coffeekraken-code-playground": "https://github.com/Coffeekraken/code-playground.git#release/0.0.1",
		"concurrently": "^3.1.0",
		"node-sass": "^4.0.0",
		"nodemon": "^1.11.0",
		"open": "0.0.5",
		"webcomponents.js": "^0.7.23",
		"webpack": "^1.14.0"
	}
}
